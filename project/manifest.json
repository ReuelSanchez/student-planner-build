{
  "name": "Student Digital Planner",
  "short_name": "Planner",
  "description": "A customizable digital planner for students to manage class schedules, track assignments, and monitor grades. Features an AI-powered study plan generator to help achieve academic goals.",
  "start_url": ".",
  "display": "standalone",
  "background_color": "#f8fafc",
  "theme_color": "#0284c7",
  "orientation": "portrait-primary",
  "icons": [
    {
      "src": "icon-192.png",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "icon-512.png",
      "type": "image/png",
      "sizes": "512x512"
    },
    {
      "src": "maskable-icon-512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "View Schedule",
      "short_name": "Schedule",
      "description": "Open the weekly and monthly schedule",
      "url": "./?screen=schedule",
      "icons": [{ "src": "icons/shortcut-schedule-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Check Grades",
      "short_name": "Grades",
      "description": "View grades and GPA",
      "url": "./?screen=grades",
      "icons": [{ "src": "icons/shortcut-grades-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Scan Document",
      "short_name": "Scan",
      "description": "Scan a document using the camera",
      "url": "./?screen=scanner",
      "icons": [{ "src": "icons/shortcut-scanner-96.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "share-receiver",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "files": [
        {
          "name": "file",
          "accept": ["image/*"]
        }
      ]
    }
  }
}